@model UsersWeb.Models.View.RegisterModel
 
<h2>Register</h2>
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
    
    <div>
        <div class="form-group">
            <label asp-for="Name">Name</label><br />
            <input class="form-control" type="text" asp-for="Name" placeholder="Enter name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Mail">Email</label><br />
            <input class="form-control" type="text" asp-for="Mail" placeholder="Enter Email" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" class="form-control" placeholder="Enter Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm password</label><br />
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary" value="Register" />
    </div>
</form>
